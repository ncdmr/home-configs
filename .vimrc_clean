syntax on
""" crosshair
set cursorline
set cursorcolumn
highlight CursorColumn ctermfg=cyan ctermbg=black cterm=bold guifg=white guibg=yellow gui=bold
highlight Cursor ctermfg=black ctermbg=red cterm=bold guifg=white guibg=yellow gui=bold
nnoremap <F2> :set cursorline! cursorcolumn!<CR>
set tabstop=2
set softtabstop=2
set shiftwidth=2
set shiftround
set expandtab
" Make search case insensitive                   
set hlsearch
set incsearch
set ignorecase
set smartcase
set nowrapscan 
set scrolloff=5
set showmatch
set visualbell
set nobackup
set nowritebackup
set noswapfile
set laststatus=2
set statusline=%F%m%r%h%w\ [FORMAT=%{&ff}]\ [TYPE=%Y]\ [ASCII=\%03.3b]\ [POS=%04l,%04v]\ [LEN=%L]\ [%p%%]\

